<div class="modal fade" id="editProjectModal-<%= project.id %>" data-project-id="<%= project.id %>" ...>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editProjectModalLabel">プロジェクトを更新</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: project, url: project_path(project), method: :patch) do |form| %>
          <div class="project-name">
            <%= form.label :name %>
            <%= form.text_field :name, placeholder: "プロジェクト名を入力してください" %>
          </div>
          <div class="project-description">
            <%= form.label :description, "説明" %>
            <%= form.text_area :description, placeholder: "プロジェクトの説明を入力してください" %>
          </div>
          <%= form.submit "プロジェクトを更新", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

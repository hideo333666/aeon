<div class="d-flex align-items-center mb-3 pt-5">
<div class = "">
  <form class="search-form-004">
    <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder: "プロジェクトを探す", class: "search-input-004" %>
      <button type="submit" class="search-button-004"></button>
    <% end %>
  </form>
</div>
<div class="pjlist-button">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newProjectModal">
    新規プロジェクト作成
  </button>
</div>
</div>
  <h1>プロジェクト</h1>
  <div class="project-cards">
    <% @projects.each do |project| %>
      <div class="project-card" draggable="true">
        <!-- プロジェクト名 -->
        <div class="project-name"><%= project.name %></div>
        
        <div class="project-description">
          <%= project.description %>
        </div>
  
        <!-- アクションアイコン -->
        <div class="project-actions">
          <!-- お気に入りボタン (星アイコン) -->
          <button class="btn btn-link favorite-btn">
            <i class="fas fa-star" style="color: #707070;"></i>
          </button>
  
          <div class="d-inline-block">
            <button class="btn btn-link" type="button" data-toggle="modal" data-target="#editProjectModal-<%= project.id %>">
              <i class="fa-solid fa-bars" style="color: #707070;"></i>
            </button>
          </div>
        </div>
      </div>
      <%= render "new_project_modal" %>
      <%= render 'edit_project_modal', project: project %>
      
    <% end %>
  </div>



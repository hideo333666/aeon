<h1>プロジェクト一覧</h1>

<table>
  <thead>
    <tr>
      <th>プロジェクト名</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
          <%= link_to "詳細", project_path(project) %>
          <%= link_to "編集", edit_project_path(project) %>
          <%= link_to "削除", project_path(project), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規プロジェクト作成", new_project_path %>
<%= form_with(model: project, url: projects_path, local: true, html: { class: 'p-4' }) do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'font-weight-bold' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description, "説明", class: 'font-weight-bold' %>
    <%= form.text_area :description, class: 'form-control', rows: 5 %>
  </div>
  <%= form.submit "プロジェクトを作成", class: "btn btn-primary mt-3" %>
<% end %>

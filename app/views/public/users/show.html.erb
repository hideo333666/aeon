<div class="mypage container mt-5">
  <div class="user-info mb-4" data-user-id="<%= @user.id %>">
    <%= form_with(model: @user, local: true, html: { class: "form-horizontal" }) do |f| %>
      <div class="custom-form">
        <%= f.label :name, "ニックネーム", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "変更を保存", class: "btn btn-primary" %>
          <%= link_to "退会", user_registration_path(@user), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger ml-2" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <div id="weekday-headers">
      <div>月</div>
      <div>火</div>
      <div>水</div>
      <div>木</div>
      <div>金</div>
      <div>土</div>
      <div>日</div>
    </div>

    <div id="contribution-grid"></div>
  </div>

  <div class="month-calendar mb-4">
    <%= month_calendar events: @events do |date, events| %>
      <div class="date-cell mb-3">
        <div class="date-number mb-1"><%= date.day %></div>
        <% events.each do |event| %>
          <div class="event-title">
            <%= event.title %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

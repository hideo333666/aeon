<%= form_for task, html: { id: 'new_task' } do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
  <%= f.label :project_id, "関連プロジェクト" %>
  <%= f.collection_select :project_id, current_user.projects, :id, :name, prompt: "プロジェクトを選択してください" %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>

  <div>
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </div>

  <div>
    <%= f.label :is_checked, '完了済み' %>
    <%= f.check_box :is_checked %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

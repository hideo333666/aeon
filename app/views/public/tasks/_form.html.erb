<%= form_for task, html: { id: 'new_task', class: 'mt-3' } do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :project_id, "関連プロジェクト" %>
    <%= f.collection_select :project_id, current_user.projects, :id, :name, { prompt: "プロジェクトを選択してください" }, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 5 %>
  </div>
  
  <div class="form-group">
    <%= f.label :date_range, "期間" %>
    <%= text_field_tag :date_range, "", class: 'form-control', placeholder: '開始日 - 終了日' %>
  </div>

  <div class="form-group">
    <%= f.label :priority, "優先度" %>
    <%= f.select :priority, { '低': 'low', '中': 'medium', '高': 'high' }, {}, class: 'form-control' %>
  </div>

  <div class="form-group form-check">
    <%= f.check_box :is_checked, class: 'form-check-input' %>
    <%= f.label :is_checked, '完了済み', class: 'form-check-label' %>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>


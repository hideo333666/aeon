<h1>タスク一覧</h1>

<%= link_to '新規タスク作成', new_task_path %>

<table>
  <tr>
    <th>タイトル</th>
    <th>説明</th>
    <th>期限</th>
    <th>優先度</th>
    <th>操作</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date %></td>
      <td><%= task.priority %></td>
      <td>
        <%= link_to '詳細', task_path(task) %>
        <%= link_to '編集', edit_task_path(task) %>
        <%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      </td>
    </tr>
  <% end %>
</table>


<%= form_for @task, url: task_path(@task), html: { class: 'task-form' } do |f| %>
  <div class="form-content">
    <div class="form-group">
      <%= f.label :title, "タイトル", class: 'form-label' %>
      <%= f.text_field :title, id: "taskTitle", class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= f.label :description, "説明：", class: 'form-label' %>
      <%= f.text_area :description, id: "taskDescription", class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= f.label :date_range, "期間", class: 'form-label' %>
      <%= text_field_tag :date_range, @task.start_date.present? && @task.end_date.present? ? "#{@task.start_date} - #{@task.end_date}" : "", class: 'form-control', placeholder: '開始日 - 終了日' %>
      <%= hidden_field_tag 'task[start_date]', @task.start_date %>
      <%= hidden_field_tag 'task[end_date]', @task.end_date %>
    </div>

    <div class="form-actions">
      <%= f.submit "変更を保存", id: "saveTaskDetails", class: 'btn btn-primary' %>
      <%= link_to '削除', task_path(@task), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
      <%= link_to '戻る', tasks_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
